{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"baseUrl": "./",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"@constants*": ["./constants*"],
			"@controllers*": ["./controllers*"],
			"@routes*": ["./routes*"],
			"@services*": ["./services*"],
			"@services": ["./services*"],
			"@utils*": ["./utils*"],
            "@configs*": ["./configs*"],
            "@helpers*": ["./helpers*"]
		}
	},
	"exclude": ["node_modules", "@shelf/jest-mongodb"]
}